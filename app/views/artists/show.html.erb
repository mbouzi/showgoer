        </a>
      </section>
    <div>
      <%= image_tag "layout.png", id: 'many' %>
    </div>

      <div id='past_sect'>
       <h3 id='past'> Past Concerts </h3>
       <p class="sort">Sort: <%= link_to "newest", artist_path(:sort_type => "newest" ) %> | <%= link_to "oldest", artist_path(:sort_type => "oldest" ) %><br></p>
        <div id='vids'>     
         <% @artist_past_concerts.each do |concert| %>
           <% if concert.videos.count > 0 %>
             <%= link_to image_tag(concert.videos.sample.thumbnail_url, class: "vid  one_vid spread"),concert_path(concert.id) %>
           <% end %>
           <h2 class='ven'><%= link_to concert.venue, concert_path(concert.id) %></h2><br>
           <h4 class='con_date'><%= concert.date_time.strftime("%b . %d . %Y") %></h4><br>
         <% end %>
         </div><br>
      </div>

  <%if false %>
  <div id='upcoming'>
