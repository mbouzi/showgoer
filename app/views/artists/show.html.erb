        <!-- Video Markup -->
        <section class="masthead">
          <div></div>
          <div class="artist-masthead-overlay"></div>
          <div class="masthead-arrow"></div>
          <h1 id='video-header' class="wow fadeInDown animated" data-wow-delay='1.3s'><%= @artist.name %></h1><br>
