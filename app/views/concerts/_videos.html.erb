    <video class="concert-video" width="600" controls>
      <source src="<%= video.url %>" type="video/mp4">
    </video>

    <% related_videos.each do |video| %>
      <video class="concert-video" width="600" controls>
        <source src="<%= video.url %>" type="video/mp4">
      </video>
      <br>
      <%= render partial: 'comments' %>


      <div class="likes">
        
       <% if current_user %> 
          <% if current_user.likes.where(video_id: video.id).count < 1 %>
            <%= button_to 'like', likes_path(:user_id => current_user.id, :video_id => video.id), class: "like-btn", data:{ :user_id => current_user.id, :video_id => video.id }   %>
            <!-- <img class='rocky' src="/rock.png"> -->
          <% else %>
           <button class="like-btn">like</button>
          <% end %>
        <% else %>
          <span>Dislikes:</span>
        <% end %>

          <span class="dislikes-vote-count<%= video.id %>"
                data-video-id="<%= video.id %>">
                <%= video.dislikes.count %>
          </span>
          </div>

      <% end %>
        <span class="dislike_num dislikes-vote-count<%= video.id %>" 
              data-video-id="<%= video.id %>">
              <%= video.dislikes.count %>
        </span>

      </div>


    <div class="dislikes">
      
     <% if current_user %> 

        <% if current_user.dislikes.where(video_id: video.id).count < 1 %>
          <%= button_to 'dislike', dislikes_path(:user_id => current_user.id, :video_id => video.id), class: "dislike-btn", data:{ :user_id => current_user.id, :video_id => video.id }   %>
        <% else %>
         <button class="dislike-btn">dislike</button>
        <% end %>
      <% else %>
        <span>Disikes:</span>
    <% end %>
      <span class="dislike_num dislikes-vote-count<%= video.id %>" 
            data-video-id="<%= video.id %>">
            <%= video.dislikes.count %>
      </span>
    </div>
    <% end %>
  </div>

      
  

