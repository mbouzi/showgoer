<div class="comments<%= commentvideo.id %>" >
	<% commentvideo.comments.each do |comment| %>
		<%= comment.content %>
		<div class='coms'>
			<%= link_to 'Edit', edit_comment_path(comment), class: "com" %> |
			<%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: 'com' %><br>
		</div>
	<% end %>
</div>